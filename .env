EDAHABIA_SECRET_KEY=
EDAHABIA_TEST_MODE=True

# ====================================================================
# LOGGING CONFIGURATION
# ====================================================================
# Niveau de log pour développement
LOG_LEVEL=DEBUG

# Pour production
# LOG_LEVEL=INFO

# ====================================================================
# STORAGE CONFIGURATION (Optionnel)
# ====================================================================
# Pour stockage local (par défaut)
USE_LOCAL_STORAGE=True

# Pour stockage cloud (production)
# USE_S3=False
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=eu-west-3

# ====================================================================
# BACKUP CONFIGURATION (Optionnel)
# ====================================================================
BACKUP_ENABLED=False
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# ====================================================================
# MONITORING CONFIGURATION (Optionnel)
# ====================================================================
# Sentry pour monitoring d'erreurs en production
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=development

# ====================================================================
# NOTES D'INSTALLATION
# ====================================================================
# 1. Copier ce fichier en .env dans la racine du projet
# 2. Modifier les valeurs selon votre environnement
# 3. Créer la base de données MySQL : iltizem_db
# 4. Lancer les migrations : python manage.py migrate
# 5. Créer un superuser : python manage.py createsuperuser
# 6. Lancer le serveur : python manage.py runserver
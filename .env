SMS_API_KEY=
SMS_SENDER_NAME=iltizem

# Pour Twilio (exemple)
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=votre_account_sid
# TWILIO_AUTH_TOKEN=votre_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ====================================================================
